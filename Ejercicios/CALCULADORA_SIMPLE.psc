Algoritmo CALCULADORA_SIMPLE
	Definir N1,N2,SUMA,RESTA,MULTIPLICACION como real; 
	Escribir "ESCRIBE DOS NUMERO";
	Leer N1;
	Leer N2;
	SUMA <-N1+N2;
	RESTA <- N1-N2;
	MULTIPLICACION <-N1*N2;
	Escribir "RESULTADOS ARITMETICOS";
	Escribir N1, "+", N2, "=", SUMA;
	Escribir N1, "-", N2, "=", RESTA;
	Escribir N1, "*", N2, "=", MULTIPLICACION;
FinAlgoritmo
